		System.out.println("4.Delete Student Data");
		System.out.println("0.Exit");
		
		choice =sc.nextInt();
		switch(choice) {
		case 1:
            addStudent(stu);
            displayMenuList();
            break;
        case 2:
            viewStudent(stu);
            displayMenuList();
            break;
        case 3:
            break;
        case 4:
            break;
        case 0:
            break;
        default:
		}
		
		


